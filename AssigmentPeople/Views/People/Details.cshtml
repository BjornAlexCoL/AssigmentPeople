@model Person

@{
    ViewData["Title"] = (@Model != null) ? "Display of " + @Model.Name : "Person Deleted";
}
@{ if (Model != null)
    {
        <h1>Details</h1>
        <h2>@Model.Name</h2>
        <h2>@Model.PhoneNumber</h2>
        <h2>@Model.CityName</h2>
        <a asp-action="Delete" asp-route-id="@Model.Id">Delete Person</a>
    }
    else
    {
        <h1>Person deleted</h1>
    }
    <br />
    <br />
    <a asp-action="Index">Back to List</a>
}

